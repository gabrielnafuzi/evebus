{
  "version": "0.2.1",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "eventbus",
    "event",
    "eventemitter",
    "emitter",
    "bus"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts-resolve",
    "test": "vitest run && pnpm run test-types",
    "test:watch": "vitest",
    "test-types": "tsc -p tsconfig.test.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ test/",
    "clean": "rimraf dist/",
    "release": "pnpm clean && pnpm build && pnpm test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && pnpm publish"
  },
  "name": "evebus",
  "author": "Gabriel Moraes <gabriel.henmoraes@gmail.com>",
  "repository": "gabrielnafuzi/evebus",
  "homepage": "https://github.com/gabrielnafuzi/evebus#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
